<!-- add join button -->
<div>
<h1><%= @team.name %></h1>
  <tr>
    <td>Team Captain:<%= @team.team_captain.first_name + " " + @team.team_captain.last_name %></td><br>
    <td>Players:<%= @team.primary_players.count %></td><br>
  <tr>
</div>
<div>
  <h4>Upcoming Games:</h4>
  <% if @next_games %>
    <%= render 'games/nextgames' %>
  <% else %>
    <p>There are no upcoming games scheduled at the moment.</p>
  <% end %>
</div>
<div>
  <h3>Primary Players:</h3>
  <% @team.primary_players.each do |player| %>
    <%= player.first_name %>
    <br>
  <% end %>
</div>
<div>
  <h3>Supporting Players:</h3>
    <% @team.secondary_players.each do |player| %>
      <%= player.first_name %>
      <br>
    <% end %>
</div>
